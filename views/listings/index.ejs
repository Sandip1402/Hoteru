<%- layout("/layouts/boilerplate") %>

    <h2>Homes</h2>
    <div class="home-list flex space-x-4 overflow-x-auto scrollbar-hide px-4 py-2 w-full snap-x snap-mandatory">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link snap-center">
                <div class="card w-64 h-72 bg-base-100 shadow-sm">
                    <figure class="object-cover w-full h-40">
                        <img src="<%=listing.image%>" alt="Hotel_image" />
                    </figure>
                    <div class="card-body ">
                        <b class="card-title">
                            <%=listing.title%>
                        </b>
                        <p>&#8377;<%=listing.price.toLocaleString("en-IN")%></p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>