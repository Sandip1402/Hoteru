<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3">
            <h2>
                <%= listing.title %>
            </h2>
        </div>
        <div class="card col-6 offset-3 listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="Hotel_image">
            <div class="card-body">
                <p class="card-text">
                    <br />
                    <%= listing.description %>
                        <br />
                        &#8377;<%= listing.price.toLocaleString("en-IN") %>
                            <br />
                            <%= listing.location %>
                                <br />
                                <%= listing.country %>
                </p>
            </div>
        </div>

        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>

        <div class="col-8 offset-3 mb-3">
            <hr />
            <h4>Give a review</h4>
            <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label"></label>
                    <input id="rating" type="range" min="1" max="5" name="review[rating]" class="form-range"
                        required />
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea id="comment" placeholder="Leave a comment" class="form-control" cols="10" rows="5"
                        name="review[comment]" required></textarea>
                    <div class="invalid-feedback">Please give a feedback</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            
            <% if(listing.reviews.length !== 0){ %>
            <hr/>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews){ %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body p-2">
                            <div class="card-title d-flex justify-content-between mb-0"><b>Jan doe</b><b><%= review.rating %> Stars</b></div>
                            <p class="small"><%= review.createdAt.toLocaleDateString("en-GB",{ day: "2-digit" ,
                                    month: "2-digit" , year: "2-digit" }) + " " + review.createdAt.toLocaleTimeString("en-GB", {
                                    hour: "2-digit" , minute: "2-digit" , hour12: false}) %>
                            </p>
                            <p class="card-text"><%= review.comment %></p>
                        </div>
                        <form method="post" class="mb-3 text-end" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-dark btn-sm">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>