<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3">
            <h2>
                <%= listing.title %>
            </h2>
        </div>
        <div class="card col-6 offset-3">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="Hotel_image">
            <div class="card-body">
                <p class="card-text">
                    <br />
                    <%= listing.description %>
                    <br />
                    &#8377;<%= listing.price.toLocaleString("en-IN") %>
                    <br />
                    <%= listing.location %>
                    <br />
                    <%= listing.country %>
                </p>
            </div>
        </div>

        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>

        <div class="col-8 offset-3 mb-3">
            <hr />
            <h4>Give a review</h4>
            <form class="form-label" method="post" action="/listings/<%= listing._id %>/reviews">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label"></label>
                    <input id="rating" type="range" min="1" max="5" step="1" name="review[rating]" class="form-range" required/>
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea id="comment" placeholder="Leave a comment" class="form-control" cols="10" rows="5"
                        name="review[comment]" required></textarea>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
    </div>