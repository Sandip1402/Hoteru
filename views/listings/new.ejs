<%- layout("/layouts/boilerplate") %>
<div class="row mb-3">
    <div class="col-8 offset-2">
        <br/>
        <h3>Enter Listing Details</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Hotel Name" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Give a title</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Give short description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" type="text" placeholder="enter image url/link" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" placeholder="Ex: 1200" class="form-control" required>
                        <div class="invalid-feedback">Enter price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" placeholder="Ex: India" class="form-control" required>
                        <div class="invalid-feedback">Enter valid country</div>                        
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" type="text" placeholder="Ex: Patna, Bihar" class="form-control" required>
                    <div class="invalid-feedback">Enter valid location</div>                   
                </div>
                <button class="btn btn-dark add-btn">Add</button>
                <br/>
            </form>
    </div>
</div>